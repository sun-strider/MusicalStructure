<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.me74.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/category_playlists" />
        <activity
            android:name=".RecentlyPlayedActivity"
            android:label="@string/category_recently_played" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums" />
        <activity
            android:name=".SongsActivity"
            android:label="@string/category_songs" />
        <activity
            android:name=".Playlist1Activity"
            android:label="@string/playlist1_name" />

    </application>

</manifest>